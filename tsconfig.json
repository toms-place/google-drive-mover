{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": "./src",
    "module": "esnext",
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "jsx": "react",
    "types": [
      "node"
    ],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ]
}
